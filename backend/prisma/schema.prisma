// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model todo {
  id            Int      @id @default(autoincrement())
  description   String
  done          Boolean
  createdAt DateTime @default(now()) @map("created_at") // Use this line if you want to specify custom column names
  updatedAt DateTime @default(now()) @map("updated_at") // Use this line if you want to specify custom column names
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
